<!DOCTYPE html>
<html>
  <head>
    <title>PlantCabinetRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
<%= link_to "Home", user_path(current_user.id), method:'get' %>
  <%= link_to "Add a Plant", new_plant_path %>
  <%= link_to "Add a Review", new_review_path %> 
  <%= link_to "All Plants", plants_path %> 
  <%= link_to "All Reviews", reviews_path %> 
  <%= link_to "Log Out", logout_path, method: :delete %>
<% else %> <%=link_to "Sign Up", signup_path %> |      
<%=link_to "Log In", login_path %> 
<% end %>

    <%= yield %>
  </body>
</html>


